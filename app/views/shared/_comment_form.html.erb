<%= form_with(model: Comment.new, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :comment, placeholder: "コメント。。。。" %>
  </div>
  <%= hidden_field_tag :photo_id, @photo.id %>
  <%= f.submit "コメントを投稿する", class: "btn btn-primary" %>
<% end %>
