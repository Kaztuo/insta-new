<% provide(:title, 'Password reset') %>
<h1>Password reset</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_reset_path(@user.id), local: true, method: :patch) do |f| %>
    
      <%= hidden_field_tag :id, @user.id %>
      
      <%= f.label :password_exist, "現在のパスワード" %>
      <%= f.password_field :password_exist, class: 'form-control' %>

      <%= f.label :password, "新しいパスワード" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "新しいパスワードの確認入力欄" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>