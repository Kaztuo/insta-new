<% provide(:title, 'Password reset') %>
<h1>Password reset</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :password, "現在のパスワード" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_new, "新しいパスワード" %>
      <%= f.password_field :password_new, class: 'form-control' %>

      <%= f.label :password_new_confirmation, "新しいパスワードの確認入力欄" %>
      <%= f.password_field :password_new_confirmation, class: 'form-control' %>

      <%= f.submit "登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>