<header class="navbar navbar-fixed-top navbar-inverse"> 
    <div class="container">
        <%= link_to "Instagram app", root_path, id: "logo" %> 
        <nav class="navbar">
            <ul class="nav navbar-nav mr-auto navbar-right">
                <li><%= link_to "top", root_path %></li>
                <li><%= link_to "my_page", current_user %></li>
                <li><%= link_to "search_comment", search_comments_path %></li>
            </ul> 
            <form class="form-inline navbar-right">
                <%= form_with url: search_comments_path, method: :get, local: true do |f| %>
                <div class="input-group">
                    <%= f.text_field :searching_comment, placeholder: "キーワードを入力", class: "form-control mr-sm-2" %>
                    <span class="input-group-btn">
                    <%= f.submit "画像検索", class: "btn btn-primary" %>
                    </span>
                    <% end %>
                </div>
            </form>
        </nav>
    </div>
</header>