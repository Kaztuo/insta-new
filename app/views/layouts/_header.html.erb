<header class="navbar navbar-fixed-top navbar-inverse"> 
    <div class="container">
        <%= link_to "Instagram app", root_path, id: "logo" %> 
        <nav>
            <ul class="nav navbar-nav mr-auto navbar-right">
                <li><%= link_to "top", root_path %></li>
                <li><%= link_to "my_page", current_user %></li>
                <li><%= link_to "画像検索ページ", '/comments/search' %></li>
            </ul> 
            <div class="form-inline navbar-right">
                <%= search_form_for @q, url: '/comments/search', method: :get do |f| %>
                    <div class="input-group">
                        <%= f.search_field :comment_cont, placeholder: "キーワードを入力", class: "form-control mr-sm-2" %>
                        <span class="input-group-btn">
                            <%= f.submit "画像検索", class: "btn btn-primary" %>
                        </span>
                     </div>
                <% end %>
            </div>
            <div class="form-inline navbar-right">
              <%= form_with url: '/comments/search', method: :get, local: true do |f| %>
                 <div class="input-group">
                    <%= f.text_field :searching_comment, placeholder: "検索2" %>
                    <span class="input-group-btn">
                        <%= f.submit "検索実行ボタン" %>
                    </span>
                 </div>
              <% end %>
            </div>            
            
        </nav>
    </div>
</header>