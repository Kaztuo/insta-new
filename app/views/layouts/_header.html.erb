<header class="navbar navbar-fixed-top navbar-inverse"> 
    <div class="container">
        <%= link_to "Instagram app", root_path, id: "logo" %> 
        <nav>
            <ul class="nav navbar-nav mr-auto navbar-right">
                <li><%= link_to "top", root_path %></li>
                <li><%= link_to "my_page", current_user %></li>
                <li><%= link_to "search_comment", '/comments/search' %></li>
            </ul> 
            <form class="form-inline navbar-right">
                <%= search_form_for @search, url: comments_path, method: :get do |f| %>
                    <div class="input-group">
                        <%= f.search_field :comment_cont, placeholder: "キーワードを入力", class: "form-control mr-sm-2" %>
                        <span class="input-group-btn">
                        <%= f.submit "画像検索", class: "btn btn-primary" %>
                        </span>
                    </div>
                <% end %>    
            </form>
        </nav>
    </div>
</header>